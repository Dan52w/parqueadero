package com.ingsoft.app.controller.rol;

import com.ingsoft.app.model.Rol;
import com.ingsoft.app.service.rol.ServicioRolActualizar;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class ControladorRolActualizar extends ServicioRolActualizar {

    public void llamarActualizar(HttpServletRequest req, HttpServletResponse res) {
        try {
            Rol objetito = new Rol(0, "");
            objetito.setCodRol(Integer.parseInt(req.getParameter("codRol")));
            objetito.setNombreRol(req.getParameter("nombreRol"));
            ServicioRolActualizar.actualizarRol(objetito, res);
        } catch (Exception e) {
            e.printStackTrace();
            try {
                res.setStatus(400);
                res.getWriter().write("{\"respuesta\":\"Error actualizando\"}");
            } catch (Exception ex) {
                ex.printStackTrace();
            }
        }
    }
}
