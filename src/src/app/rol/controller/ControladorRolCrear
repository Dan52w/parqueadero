import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import com.ingsoft.app.model.Rol;
import com.ingsoft.app.service.rol.ServicioRolCrear;

public class ControladorRolCrear {

    // Instancia única (patrón Singleton)
    private static final ControladorRolCrear instancia = new ControladorRolCrear();
    
    // Constructor privado
    private ControladorRolCrear() {}
    
    // Método para obtener la instancia
    public static ControladorRolCrear getInstancia() {
        return instancia;
    }

    public void llamarGrabarRol(HttpServletRequest req, HttpServletResponse res) {
        try {
            // Parsear el JSON del cuerpo de la petición
            Gson gson = new Gson();
            Rol objTemporal = gson.fromJson(req.getReader(), Rol.class);
            
            // Llamar al servicio
            ServicioRolCrear.grabarRol(objTemporal, res);
            
        } catch (Exception e) {
            e.printStackTrace();
            try {
                res.setStatus(HttpServletResponse.SC_BAD_REQUEST);
                res.getWriter().write("{\"error\":\"Error al procesar la solicitud\"}");
            } catch (Exception ex) {
                ex.printStackTrace();
            }
        }
    }
}
